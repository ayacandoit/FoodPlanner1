<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="8dp">

    <!-- CardView without redundant FrameLayout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/re" />

            <TextView
                android:id="@+id/IngreName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#80878787"
                android:fontFamily="@font/inriasansbold"
                android:gravity="center"
                android:textColor="#FAFFFFFF"
                android:textSize="20sp"
                android:singleLine="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Delicious" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- MeasureName outside CardView -->
    <TextView
        android:id="@+id/MeasureName"
        android:layout_width="200dp"
        android:layout_height="35dp"

        android:fontFamily="@font/inriasansbold"
        android:gravity="center"
        android:textColor="#8A47EB"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        tools:text="Measurement" />

</LinearLayout>
